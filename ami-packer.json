{
  "variables": {
    "VPC_ID" : "{{env `VPC_ID`}}",
    "SUBNET_ID" : "{{env `SUBNET_ID`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-west-1",
      "instance_type": "t2.micro",
      "vpc_id" : "{{user `VPC_ID`}}",
      "subnet_id" : "{{user `SUBNET_ID`}}",
      "ssh_username": "ec2-user",
      "ami_name": "AWS_HELLO_WORLD-{{timestamp}}",
      "ami_groups": ["all"],
      "source_ami_filter": {
        "filters": {
            "virtualization-type": "hvm",
            "name": "amzn2-ami-hvm-2.*",
            "root-device-type": "ebs"
        },
        "owners": ["137112412989"],
        "most_recent": true
      }
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source" : "./upload/",
      "destination" : "/tmp"
    },
    {
      "type": "shell",
      "script": "setup.sh"
    }
  ]
}